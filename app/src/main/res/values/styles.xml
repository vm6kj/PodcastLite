<resources>
    <!-- Base application theme. -->
    <style name="Theme.Base.PodcastLite.Light" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accent_light</item>
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimary">@color/accent_light</item>
        <item name="colorPrimaryDark">@color/accent_light</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="actionBarStyle">@style/Widget.PodcastLite.ActionBar.Light</item>
        <item name="background_elevated">@color/background_elevated_light</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="ic_home">@drawable/ic_home_black</item>
        <item name="ic_search">@drawable/ic_search_black</item>
        <item name="ic_your_album">@drawable/ic_album_black</item>
    </style>

    <style name="Theme.Base.PodcastLite.Dark" parent="ThemeOverlay.MaterialComponents">
        <item name="colorAccent">@color/accent_dark</item>
        <item name="colorSecondary">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimary">@color/accent_dark</item>
        <item name="colorPrimaryDark">@color/background_darktheme</item>
        <item name="android:windowBackground">@color/background_darktheme</item>
        <item name="actionBarStyle">@style/Widget.PodcastLite.ActionBar.Dark</item>
        <item name="background_elevated">@color/background_elevated_darktheme</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/medium_gray</item>

        <item name="ic_home">@drawable/ic_home_white</item>
        <item name="ic_search">@drawable/ic_search_white</item>
        <item name="ic_your_album">@drawable/ic_album_white</item>
    </style>

    <style name="Widget.PodcastLite.ActionBar.Light" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/background_light</item>
    </style>

    <style name="Widget.PodcastLite.ActionBar.Dark" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/background_darktheme</item>
    </style>

    <style name="DarkThem" parent="Theme.Base.PodcastLite.Light">
        <!--        <item name="titleTextColor">#FFFFFFFF</item>-->
        <item name="colorPrimary">#FF000000</item>
        <item name="colorPrimaryDark">#FF000000</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="background_elevated">#FF000000</item>
        <item name="textColor">@android:color/white</item>
        <item name="metaTextColor">#FFAEAEAE</item>
    </style>
</resources>
<resources>

    <style name="Theme.PodcastLite.Light" parent="Theme.Base.PodcastLite.Light">

    </style>

    <style name="Theme.PodcastLite.Dark" parent="Theme.Base.PodcastLite.Dark">

    </style>

    <style name="Theme.PodcastLite.Light.NoTitle" parent="Theme.PodcastLite.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="Theme.PodcastLite.Dark.NoTitle" parent="Theme.PodcastLite.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Base.PodcastLite.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accent_light</item>
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimary">@color/accent_light</item>
        <item name="colorPrimaryDark">@color/accent_light</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="actionBarStyle">@style/Widget.PodcastLite.ActionBar.Light</item>
        <item name="toolbarColor">@color/background_light</item>
        <item name="background_elevated">@color/background_elevated_light</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/medium_gray</item>

        <item name="vectorDrawableColor">@color/greyInLight</item>
        <item name="titleTextStyleLarge">@style/TitleText.Large.Light</item>
        <item name="titleTextStyleNormal">@style/TitleText.Normal.Light</item>
        <item name="titleTextStyleSmall">@style/TitleText.Small.Light</item>
        <item name="textStyleLarge">@style/Text.Large.Light</item>
        <item name="textStyleNormal">@style/Text.Normal.Light</item>
        <item name="textStyleSmall">@style/Text.Small.Light</item>
    </style>

    <style name="Theme.Base.PodcastLite.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorAccent">@color/accent_dark</item>
        <item name="colorSecondary">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimary">@color/accent_dark</item>
        <item name="colorPrimaryDark">@color/background_darktheme</item>
        <item name="android:windowBackground">@color/background_darktheme</item>
        <item name="actionBarStyle">@style/Widget.PodcastLite.ActionBar.Dark</item>
        <item name="toolbarColor">@color/background_darktheme</item>
        <item name="background_elevated">@color/background_darktheme</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/medium_gray</item>

        <item name="vectorDrawableColor">@color/greyInDark</item>
        <item name="titleTextStyleLarge">@style/TitleText.Large.Dark</item>
        <item name="titleTextStyleNormal">@style/TitleText.Normal.Dark</item>
        <item name="titleTextStyleSmall">@style/TitleText.Small.Dark</item>
        <item name="textStyleLarge">@style/Text.Large.Dark</item>
        <item name="textStyleNormal">@style/Text.Normal.Dark</item>
        <item name="textStyleSmall">@style/Text.Small.Dark</item>
    </style>

    <style name="Widget.PodcastLite.ActionBar.Light" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/background_light</item>
    </style>

    <style name="Widget.PodcastLite.ActionBar.Dark" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/background_darktheme</item>
    </style>

    <style name="TopSheet_DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_out_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_back_to_top</item>
    </style>

    <!--  Text  -->
    <style name="TitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleText.Large">
        <item name="android:textSize">@dimen/title_text_size_large</item>
    </style>

    <style name="TitleText.Normal">
        <item name="android:textSize">@dimen/title_text_size_normal</item>
    </style>

    <style name="TitleText.Small">
        <item name="android:textSize">@dimen/title_text_size_small</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Text.Normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TitleText.Large.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleText.Large.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleText.Normal.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleText.Normal.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleText.Small.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleText.Small.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Large.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Large.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Normal.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Normal.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Small.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Small.Light">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>